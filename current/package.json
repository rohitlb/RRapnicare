  "scripts": {
    "serve": "concurrently \"nodemon ./server/index.js --exec babel-node --presets babel-preset-env\" \"npm run serve:angular\"",
    "serve:angular": "ng serve --aot --open",
    "build": "rimraf ./dist && babel ./server/ --out-dir dist/server/ && npm run build:angular && cp package.json dist/",
    "build:angular": "ng build --prod --env=prod --output-path=./dist/client",
    "start": "npm i && node ./server/index.js"
  },
  "private": true,
