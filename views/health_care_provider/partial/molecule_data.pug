img#drug(src='/images/moleculeData.jpg', style='position:fixed;top:0px;left:0px;width:100%;height:100%;z-index:-1;')
div.row
    div.col.s12.m12.l9.offset-l3

        div.container#moleculeData
            .row
                .col.s12
                    form(name='next', method='POST', onsubmit='return validateForm();', action='./health_care_provider/partial/molecule_data')
                        center
                            h2(style='font-weight:600;') Enter Molecule Data
                        div.col.s12.m6.l6
                            span Molecule Name
                            span.red-text &nbsp*
                            input.validate(type='text', name='t1', value='', style='color:black;font-size: 18px;font-weight: 400;')
                        div.col.s12.m6.l6
                            span Drug Category
                            span.red-text &nbsp*
                            input.validate(type='text', name='t2', value='', style='color:black;font-size: 18px;font-weight: 400;')
                        div.col.s12.m12.l12
                            span Pharmacokinetics
                            span.red-text &nbsp*
                            br
                            div.col.s12.m6.l6
                                span.flow-text Absorption
                                    input.validate(type='text', name='t4', value='', style='color:black;font-size: 18px;font-weight: 400;')
                            div.col.s12.m6.l6
                                span.flow-text Distribution
                                    input.validate(type='text', name='t4', value='', style='color:black;font-size: 18px;font-weight: 400;')
                            div.col.s12.m6.l6
                                span.flow-text Metabolism
                                    input.validate(type='text', name='t4', value='', style='color:black;font-size: 18px;font-weight: 400;')
                            div.col.s12.m6.l6
                                span.flow-text Excretion
                                    input.validate(type='text', name='t4', value='', style='color:black;font-size: 18px;font-weight: 400;')

                        div.col.s12.m6.l6
                            span Short Description
                            span.red-text &nbsp*
                            input.validate(type='text', name='t3', value='', style='color:black;font-size: 18px;font-weight: 400;')
                        div.col.s12.m6.l6
                            span Adverse Reactions/Side Effects
                            span.red-text &nbsp*
                            input.validate(type='text', name='t4', value='', style='color:black;font-size: 18px;font-weight: 400;')
                            //input.button(type='submit')
                        div.col.s12.m6.l6
                            span Special Precautions
                            span.red-text &nbsp*
                            input.validate(type='text', name='t4', value='', style='color:black;font-size: 18px;font-weight: 400;')
                            //input.button(type='submit')
                        div.col.s12.m6.l6
                            span Other Drug Interactions
                            input.validate(type='text', name='t4', value='', style='color:black;font-size: 18px;font-weight: 400;')
                            //input.button(type='submit')
                        div.col.s12.m6.l6
                            span Other Interactions
                            br
                            span.flow-text
                                input.validate(type='text', name='t4', value='', style='color:black;font-size: 18px;font-weight: 400;')
                            //input.button(type='submit')
                        div.col.s12.m6.l6
                            span Taken (before/after) Food
                                input.validate(type='text', name='t4', value='', style='color:black;font-size: 18px;font-weight: 400;')
                        div.col.s12.m12.l12
                            span Dosage
                            span.red-text &nbsp*
                            br
                            div.col.s12.m6.l6
                                span.flow-text Oral
                                    input.validate(type='text', name='t4', value='', style='color:black;font-size: 18px;font-weight: 400;')
                            div.col.s12.m6.l6
                                span.flow-text Intravenous
                                    input.validate(type='text', name='t4', value='', style='color:black;font-size: 18px;font-weight: 400;')
                                    //input.button(type='submit')

                        div.col.s12.m12.l12
                            span List of Contraindications
                            br
                            div.col.s12.m6.l6
                                span.flow-text In Lactation
                                    a(href='#new_text')
                                        i.material-icons.right.small#add_button add_circle
                                    input.validate(type='text', value='', style='color:black;font-size: 18px;font-weight: 400;')
                            div.col.s12.m6.l6
                                span.flow-text
                                    a#cl
                                        i.material-icons.right close
                                    input(list='contra')#new_text
                                    datalist#contra
                                        option In Pregnancy
                                        option In Children
                                        option Storage
                                        option Lab Interference
                                        option In Geriatric/Old Person
                                        option Other Contraindications
                                        input.validate(type='text', value='', style='color:black;font-size: 18px;font-weight: 400;')
                                //input.button(type='submit')
                        div.row
                            div.col.s6.l4.m4
                                input.button.hoverable(type='reset')
                            div.col.s6.l4.m4.offset-l4
                                input.button.hoverable(type='submit')
